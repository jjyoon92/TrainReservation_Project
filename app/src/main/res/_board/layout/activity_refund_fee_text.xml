<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/container"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_refund_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView android:id="@+id/text_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="@string/refund_fee_text"
            app:layout_constraintBottom_toTopOf="@id/divider_non_member"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/container"
            />

        <RelativeLayout android:id="@+id/divider_non_member"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/text_box"
            app:layout_constraintBottom_toTopOf="@+id/refund_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/dark_gray"/>
        <TextView
            android:id="@+id/refund_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/refund_cancel"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/container"
            app:layout_constraintRight_toLeftOf="@+id/refund_text2"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/refund_text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="35dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/request_cancel"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/container"
            app:layout_constraintLeft_toRightOf="@+id/refund_text"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>